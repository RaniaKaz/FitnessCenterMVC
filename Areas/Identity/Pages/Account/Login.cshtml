@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card shadow-lg">
            <div class="card-header text-center">
                <h3 class="mb-0"><i class="fas fa-sign-in-alt"></i> Giriş Yap</h3>
            </div>
            <div class="card-body p-4">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">
                            <i class="fas fa-envelope"></i> Email
                        </label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" 
                               aria-required="true" placeholder="ornek@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">
                            <i class="fas fa-lock"></i> Şifre
                        </label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" 
                               aria-required="true" placeholder="Şifrenizi girin" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label">
                            Beni Hatırla
                        </label>
                    </div>
                    
                    <div class="d-grid mb-3">
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Giriş Yap
                        </button>
                    </div>
                    
                    <div class="text-center">
                        <p class="mb-2">
                            <a id="forgot-password" asp-page="./ForgotPassword">
                                <i class="fas fa-question-circle"></i> Şifrenizi mi unuttunuz?
                            </a>
                        </p>
                        <p class="mb-2">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                <i class="fas fa-user-plus"></i> Yeni kullanıcı olarak kayıt ol
                            </a>
                        </p>
                        <p class="mb-0">
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                                <i class="fas fa-envelope"></i> Email onayını tekrar gönder
                            </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
