@{
    ViewData["Title"] = "Hizmet - Salon Tanımı";
}

<h2>Hizmet - Salon Tanımı</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="HizSalOlustur" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-2">
                <label>Hizmet</label>
                <select name="hizmetId"class="form-control"asp-items="ViewBag.Hizmetler"></select>
            </div>

            <div class="form-group mb-2">
                <label>Salon</label>
                <select name="salonId"
                        class="form-control"
                        asp-items="ViewBag.Salonlar">
                </select>
            </div>

            <div class="form-group mb-2">
                <label>Süre (dk)</label>
                <input type="number"
                       name="sure"
                       class="form-control"
                       min="1"
                       required />
            </div>

            <div class="form-group mb-3">
                <label>Fiyat (₺)</label>
                <input type="number"
                       name="fiyat"
                       class="form-control"
                       step="0.01"
                       min="0"
                       required />
            </div>

            <button type="submit" class="btn btn-primary">
                Kaydet
            </button>

            <a asp-action="Index" class="btn btn-secondary ms-2">
                Listeye Dön
            </a>
        </form>
    </div>
</div>
