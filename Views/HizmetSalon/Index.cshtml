@model IEnumerable<webProject.Models.HizSalon>

@{
    ViewData["Title"] = "Hizmet - Salon Tanımları";
}

<h2>Hizmet - Salon Tanımları</h2>

<p>
    <a asp-action="HizSalOlustur" class="btn btn-primary">
        Yeni Hizmet-Salon Tanımı
    </a>
</p>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz hizmet-salon tanımı yapılmamıştır.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Salon</th>
                <th>Hizmet</th>
                <th>Süre (dk)</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Salon.Ad</td>
                    <td>@item.Hizmet.Ad</td>
                    <td>@item.Sure</td>
                    <td>@item.Fiyat ₺</td>
                    <td>
                        <form asp-action="HizSalSil"
                              asp-route-id="@item.ID"
                              method="post"
                              style="display:inline"
                              onsubmit="return confirm('Bu tanımı silmek istiyor musunuz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">
                                Sil
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
