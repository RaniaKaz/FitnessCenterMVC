@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Hero Section -->
<div class="hero-section">
    <h1><i class="fas fa-dumbbell"></i> FITNESS CENTER</h1>
    <p class="lead">Sağlıklı yaşam için en iyi fitness merkezi. Profesyonel antrenörler ve modern ekipmanlarla hedeflerinize ulaşın!</p>
    <div class="mt-4">
        @if (!User.Identity.IsAuthenticated)
        {
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-user-plus"></i> Hemen Kayıt Ol
            </a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-secondary btn-lg">
                <i class="fas fa-sign-in-alt"></i> Giriş Yap
            </a>
        }
        else if (User.IsInRole("Uye"))
        {
            <a asp-controller="Uye" asp-action="UserPaneli" class="btn btn-primary btn-lg">
                <i class="fas fa-calendar-check"></i> Randevu Al
            </a>
        }
        else if (User.IsInRole("Admin"))
        {
            <a asp-controller="Admin" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="fas fa-user-shield"></i> Admin Panel
            </a>
        }
    </div>
</div>

<!-- Features Section -->
<div class="container my-5">
    <div class="row g-4">
        <div class="col-md-4">
            <a asp-controller="Antrenor" asp-action="AntList" class="text-decoration-none">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <h4>Profesyonel Antrenörler</h4>
                        <p>Alanında uzman, sertifikalı antrenörlerimiz ile hedeflerinize ulaşın.</p>
                    </div>
                </div>
            </a>
        </div>
        
        <div class="col-md-4">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Uye"))
            {
                <a asp-controller="Randevu" asp-action="RanOlustur" class="text-decoration-none">
                    <div class="card feature-card">
                        <div class="card-body text-center">
                            <div class="feature-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <h4>Kolay Randevu Sistemi</h4>
                            <p>Online randevu sistemi ile istediğiniz zaman kolayca randevu alın.</p>
                        </div>
                    </div>
                </a>
            }
            else
            {
                <a asp-area="Identity" asp-page="/Account/Register" class="text-decoration-none">
                    <div class="card feature-card">
                        <div class="card-body text-center">
                            <div class="feature-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <h4>Kolay Randevu Sistemi</h4>
                            <p>Online randevu sistemi ile istediğiniz zaman kolayca randevu alın.</p>
                        </div>
                    </div>
                </a>
            }
        </div>
        
        <div class="col-md-4">
            <a asp-controller="Hizmet" asp-action="Index" class="text-decoration-none">
                <div class="card feature-card">
                    <div class="card-body text-center">
                        <div class="feature-icon">
                            <i class="fas fa-list"></i>
                        </div>
                        <h4>Hizmetler</h4>
                        <p>Kişisel antrenman, cardio, yoga ve daha fazlası için hizmetlerimizi inceleyin.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- CTA Section -->
@if (!User.Identity.IsAuthenticated)
{
    <div class="container my-5">
        <div class="card bg-primary-custom text-white">
            <div class="card-body text-center p-5">
                <h2>Hemen Başlayın!</h2>
                <p class="lead">Fitness yolculuğunuza bugün başlayın. Ücretsiz deneme seansı için kayıt olun!</p>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg">
                    <i class="fas fa-user-plus"></i> Ücretsiz Kayıt Ol
                </a>
            </div>
        </div>
    </div>
}
