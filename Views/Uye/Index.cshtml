@model IEnumerable<webProject.Models.Uye>

@{
    ViewData["Title"] = "Üyeler";
}

<h2>Üyeler</h2>

<p>
    <a asp-action="UyeOlustur" class="btn btn-primary">
        Yeni Üye Oluştur
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Email</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uye in Model)
        {
            <tr>
                <td>@uye.Ad</td>
                <td>@uye.Soyad</td>
                <td>@uye.Email</td>
                <td>
                    <a asp-action="UyeDetay" asp-route-id="@uye.ID" class="btn btn-sm btn-info">Detay</a>

                    <a asp-action="UyeDuzenle"
                       asp-route-id="@uye.ID"
                       class="btn btn-sm btn-warning">
                        Düzenle
                    </a>

                    <a asp-action="UyeSil"
                       asp-route-id="@uye.ID"
                       class="btn btn-sm btn-danger">
                        Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
