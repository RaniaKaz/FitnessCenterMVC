@model webProject.Models.AntMusaitlik

@{
    ViewData["Title"] = "Müsaitlik Ekle";
}

<h2>Müsaitlik Ekle</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AntMusaitlikOlustur" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Antrenör -->
            <div class="form-group">
                <label asp-for="AntrenorID" class="control-label">Antrenör</label>
                <select asp-for="AntrenorID"
                        class="form-control"
                        asp-items="ViewBag.AntrenorID">
                </select>
            </div>

            <!-- Gün -->
            <div class="form-group">
                <label asp-for="Gun" class="control-label">Gün</label>
                <select asp-for="Gun"
                        class="form-control"
                        asp-items="Html.GetEnumSelectList<DayOfWeek>()">
                </select>
            </div>

            <!-- Başlangıç -->
            <div class="form-group">
                <label asp-for="Baslangic" class="control-label">Başlangıç Saati</label>
                <input asp-for="Baslangic"
                       type="time"
                       class="form-control" />
            </div>

            <!-- Bitiş -->
            <div class="form-group">
                <label asp-for="Bitis" class="control-label">Bitiş Saati</label>
                <input asp-for="Bitis"
                       type="time"
                       class="form-control" />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-success">
                    Kaydet
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Geri
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
