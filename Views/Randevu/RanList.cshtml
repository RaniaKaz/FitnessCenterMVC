@model IEnumerable<webProject.Models.Randevu>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Hizmet</th>
            <th>Antrenör</th>
            <th>Ücret</th>
            <th>Randevu Tarihi</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Hizmet?.Ad</td>

                <td>
                    @item.Antrenor?.Ad @item.Antrenor?.Soyad
                </td>

                <td>@item.Ucret ₺</td>

                <td>@item.RandevuTarihi.ToString("dd.MM.yyyy HH:mm")</td>

                <td>
                    @if (item.OnayDurumu)
                    {
                        <span class="badge bg-success">Onaylandı</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Beklemede</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.ID">Detay</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
